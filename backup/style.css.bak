@define-color foreground #d3c6aa;
@define-color background #2d353b;
* {
  background-color: @background;
  color: @foreground;

  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: CaskaydiaMono Nerd Font;
  font-size: 15px;
}

.modules-left {
  margin-left: 8px;
}

.modules-right {
  margin-right: 8px;
}

#workspaces button {
  all: initial;
  padding: 0 6px;
  margin: 0 1.5px;
  min-width: 9px;
}

#workspaces button.empty {
  opacity: 0.5;
}

#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,


#custom-expand-icon {
  margin-right: 7px;
}

tooltip {
  padding: 2px;
}



#clock {
  margin-left: 8.75px;
}

.hidden {
  opacity: 0;
}


